# ===========================================
# Genesis 2025 Backend Configuration
# ===========================================

# ----------------
# Authentication & Security
# ----------------
SECRET_KEY=your-super-secret-key-change-this-in-production-min-32-chars-long
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ----------------
# Database Configuration
# ----------------
# SQLAlchemy URL for authentication (optional - system works without it)
DATABASE_URL=postgresql://postgres:postgres@127.0.0.1:5433/trading_hub

# AsyncPG for order book data
DB_HOST=127.0.0.1
DB_PORT=5433
DB_NAME=trading_hub
DB_USER=postgres
DB_PASSWORD=postgres

# Pool Settings (optional)
DB_POOL_MIN_SIZE=2
DB_POOL_MAX_SIZE=10
DB_POOL_TIMEOUT=30
DB_COMMAND_TIMEOUT=60
DB_MAX_RETRIES=3
DB_RETRY_DELAY=1.0

# ----------------
# C++ Engine Configuration
# ----------------
USE_CPP_ENGINE=true
CPP_ENGINE_HOST=localhost
CPP_ENGINE_PORT=50051

# ----------------
# Buffer & Queue Configuration
# ----------------
MAX_BUFFER_SIZE=100
RAW_QUEUE_SIZE=2000
PROCESSED_QUEUE_SIZE=2000
REPLAY_BATCH_SIZE=500
BACKPRESSURE_THRESHOLD=1500

# ----------------
# Frontend Configuration
# ----------------
FRONTEND_URL=http://localhost:5173

# C++ Analytics Engine
USE_CPP_ENGINE=true
CPP_ENGINE_HOST=localhost
CPP_ENGINE_PORT=50051
